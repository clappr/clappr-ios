source 'https://github.com/CocoaPods/Specs.git'

target 'Clappr', :exclusive => true do
  pod "Clappr", :path => "../"
end

target 'UnitTests', :exclusive => true do
  pod "Clappr", :path => "../"
  pod 'Kiwi'
end

target 'AcceptanceTests', :exclusive => true do
    pod "Clappr", :path => "../"
    pod 'KIF', '~> 3.0', :configurations => ['Debug']
    pod 'KIF-Kiwi'
end
